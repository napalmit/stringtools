</com:TFilterCollection>
<br>
<com:TImageButton ID="Search_2" onClick="onSearchAddRacquet" />
<com:TImageButton ID="Cancel_2" onClick="onClearAddRacquet" "/>

<com:TFilterDataGrid
	SkinID="datagrid_1"
	
    ID="DataGridAddRacquets"
