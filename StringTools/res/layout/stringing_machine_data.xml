<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true">
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="#e2e2e2" >
	    	  <!--  BrandName  -->
	          <TextView 
	              	android:id="@+id/lblBrandName"
	              	android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:textColor="#666666"
	                android:text="@string/BrandName"/>
	          <Spinner android:id="@+id/spinBrandName"
	       		android:layout_width="fill_parent"
	       		android:layout_height="wrap_content"/>
	          <!--  Type  -->
	          <TextView 
	              	android:id="@+id/lblType"
	              	android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:textColor="#666666"
	                android:text="@string/Type"/>
	          <Spinner android:id="@+id/spinType"
	       		android:layout_width="fill_parent"
	       		android:layout_height="wrap_content"/>
	          <!--  Model  -->
	          <TextView 
	                android:id="@+id/lblModel"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:textColor="#666666"
	                android:text="@string/Model"/>
	          <EditText 
	              	android:id="@+id/Model"
	              	android:inputType="text"
	              	android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dip"
	                android:layout_marginBottom="20dip"
	                android:singleLine="true"/>	 
	          <!--  Serial  -->
	          <TextView 
	                android:id="@+id/lblSerial"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:textColor="#666666"
	                android:text="@string/serial"/>
	          <EditText 
	              	android:id="@+id/Serial"
	              	android:inputType="text"
	              	android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dip"
	                android:layout_marginBottom="20dip"
	                android:singleLine="true"/>
	          
	          <!--  Date Buy  -->
	          <TextView 
	                android:id="@+id/lblDateBuy"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:textColor="#666666"
	                android:text="@string/DateBuy"/>
	          <RelativeLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:orientation="horizontal" >

			    

			    <TextView
			        android:id="@+id/DateBuy"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignBaseline="@+id/buttonDateBuy"
			        android:layout_alignBottom="@+id/buttonDateBuy"
			        android:layout_alignParentLeft="true"
			        android:singleLine="true"
			        android:text="@string/SetDate"
			        android:textColor="#666666" />
			    
			    <Button
			        android:id="@+id/buttonDateBuy"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/SetDate"
			        android:textColor="#666666"
			        android:layout_alignParentRight="true"
			         />
			
			  </RelativeLayout>
			  
	          
	          <!--  Date calibration  -->
	          <TextView 
	                android:id="@+id/lblDateCalibration"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:textColor="#666666"
	                android:text="@string/DateCalibration"/>
	          <RelativeLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:orientation="horizontal" >

			    

			    <TextView
			        android:id="@+id/DateCalibration"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignBaseline="@+id/buttonDateCalibration"
			        android:layout_alignBottom="@+id/buttonDateCalibration"
			        android:layout_alignParentLeft="true"
			        android:singleLine="true"
			        android:text="@string/SetDate"
			        android:textColor="#666666" />
			    
			    <Button
			        android:id="@+id/buttonDateCalibration"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/SetDate"
			        android:textColor="#666666"
			        android:layout_alignParentRight="true"
			         />
			
			  </RelativeLayout>
	          
	          
	          <!--  Note  -->
	          <TextView 
	                android:id="@+id/lblNote"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:textColor="#666666"
	                android:text="@string/Note"/>
	          <EditText 
	              	android:id="@+id/Note"
	              	android:inputType="textMultiLine"
	              	android:lines="8"
	              	android:minLines="6"
	              	android:scrollbars="vertical"
	              	android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                />
	</LinearLayout>
</ScrollView>